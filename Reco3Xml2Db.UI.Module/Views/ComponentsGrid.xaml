        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label HorizontalAlignment="Right" Content="Count:" />
            <Label Content="{Binding Components.Count}" />
        </StackPanel>

        <DataGrid
            Grid.Row="1"
            AutoGenerateColumns="False"
            HorizontalScrollBarVisibility="Auto"
            ItemsSource="{Binding Components}">

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding PDNumber}" Header="PDNumber" />
                <DataGridTextColumn Binding="{Binding DownloadedTimestamp}" Header="Downloaded" />
                <DataGridTextColumn Binding="{Binding Description}" Header="Description" />
                <DataGridTextColumn Binding="{Binding PDStatus, Converter={StaticResource StatusIntToEnumValueConverter}, ConverterParameter={x:Type enums:PDStatus}}" Header="Status" />
                <DataGridTextColumn Binding="{Binding ComponentType, Converter={StaticResource StatusIntToEnumValueConverter}, ConverterParameter={x:Type enums:ComponentType}}" Header="Type" />
                <DataGridTextColumn Binding="{Binding PDSource, Converter={StaticResource StatusIntToEnumValueConverter}, ConverterParameter={x:Type enums:PDSource}}" Header="Source" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding Xml}"
                    Header="Xml" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
