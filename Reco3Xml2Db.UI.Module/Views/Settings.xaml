<UserControl
    x:Class="Reco3Xml2Db.UI.Module.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Reco3Xml2Db.UI.Module.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="300"
    d:DesignWidth="450"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToOpacityConverter x:Key="BoolToOpacity" />
        <converters:BoolToItalicConverter x:Key="BoolToItalic" />
        <converters:BoolToGreyForegroundConverter x:Key="BoolToForeground" />

        <!--<Style TargetType="ToolTip">
            <Setter Property="Background" Value="LightYellow" />
        </Style>-->
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Grid.ColumnSpan="4"
            Margin="0,5"
            HorizontalAlignment="Center"
            Content="{Binding PageHeader}"
            FontSize="20" />
        <TextBlock
            Grid.Row="1"
            Margin="5,5,0,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Text="Server: " />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,5,-8,5"
            Text="{Binding Server, UpdateSourceTrigger=PropertyChanged}"
            ToolTip="{Binding ServerToolTip}" />

        <Button
            Grid.Row="1"
            Grid.Column="2"
            Width="25"
            Height="20"
            Margin="0,-1,-13,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Command="{Binding GetDbCommand}"
            Content="..."
            ToolTip="{Binding DbDialogButtonToolTip}" />

        <TextBlock
            Grid.Row="4"
            Margin="5,5,0,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Text="Xml File Path: " />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,5,-8,5"
            Text="{Binding XmlFilePath}"
            ToolTip="{Binding XmlFilePathToolTip}" />
        <!--  Text="{Binding XmlFilePath, UpdateSourceTrigger=PropertyChanged}"  -->

        <Button
            Grid.Row="4"
            Grid.Column="2"
            Width="25"
            Height="20"
            Margin="0,-1,-13,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Command="{Binding GetFilePathCommand}"
            Content="..."
            ToolTip="{Binding XmlFileDialogButtonToolTip}" />

        <TextBlock
            Grid.Row="3"
            Margin="5,5,0,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Text="Authentication: " />
        <ComboBox
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,5,0,5"
            ItemsSource="{Binding AuthenticationList}"
            SelectedIndex="{Binding Authentication}"
            ToolTip="{Binding AuthToolTip}" />

        <TextBlock
            Grid.Row="2"
            Margin="5,5,0,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontStyle="{Binding HasServerValue, Converter={StaticResource BoolToItalic}}"
            Foreground="{Binding HasServerValue, Converter={StaticResource BoolToForeground}}"
            Text="Database: " />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,5,0,5"
            FontStyle="{Binding HasServerValue, Converter={StaticResource BoolToItalic}}"
            IsEnabled="{Binding HasServerValue}"
            Text="{Binding DbName, UpdateSourceTrigger=PropertyChanged}"
            ToolTip="{Binding DbToolTip}" />
        <Button
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.Column="3"
            Width="75"
            Margin="5,5,10,5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Command="{Binding SaveSettingsCommand}"
            Content="Save"
            ToolTip="{Binding SaveButtonToolTip}" />
    </Grid>
</UserControl>
